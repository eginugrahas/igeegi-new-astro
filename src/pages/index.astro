  <script>
    const typingtext: string[] = [
      "Frontend Developer",
      "UI/UX Designer",
      "Copywriter",
      "Tourism Enthusiast",
    ];

    const typingSpeed: number = 125; // Adjust the speed (in milliseconds) of typing here
    let textIndex = 0;

    function typeText(index: number, text: string) {
      const element: HTMLElement | null = document.getElementById("animated");

      if (index <= text.length) {
        element!.textContent = text.slice(0, index);
        setTimeout(() => typeText(index + 1, text), typingSpeed);
      } else {
        setTimeout(nextText, 1200); // Pause before moving to the next text
      }
    }

    function nextText() {
      if (textIndex < typingtext.length) {
        typeText(0, typingtext[textIndex]);
        textIndex++;
      } else {
        textIndex = 0; // Start over from the beginning
        nextText();
      }
    }

    nextText();
  </script>
