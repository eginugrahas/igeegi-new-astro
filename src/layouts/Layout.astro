---
import Header from "../components/Header.astro";
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const {
  title,
  description,
  image = "/images/Logo Yellow igeegi.svg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo-yellow.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <link rel="stylesheet" href="src/styles/global.css" />
	<link href="https://dev.iconly.io/public/SxpQFETPIo42/iconly.css" rel="stylesheet"/>
    <title>{title}</title>
  </head>
  <ViewTransitions/>
  <body class="min-h-screen relative px-16 md:px-24 lg:px-24 flex flex-col justify-center items-center">
    <div class="fixed top-2 w-full">
      <Header />
    </div>
    <slot />
  </body>
</html>
